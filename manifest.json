{
    "name": "Peek-a-Repo",
    "description": "Hover to preview files and folders on github.",
    "version": "1.0",
    "manifest_version": 3,
    "action": {
      "default_popup": "popup/popup.html",
      "default_icon": "/icons/icon128.png"
    },
    "icons": {
      "128": "/icons/icon128.png",
      "48": "/icons/icon48.png",
      "32": "/icons/icon32.png",
      "16": "/icons/icon16.png"
    },
    "permissions": [
      "activeTab"
    ]
  }